	</background>
	<detail>
		<band height="47" splitType="Stretch">
			<textField>
				<reportElement x="0" y="1" width="555" height="21"/>
				<textElement verticalAlignment="Middle">
					<font size="8" isBold="true"/>
				</textElement>
				<textFieldExpression class="java.lang.String"><![CDATA[$F{descripcion} + " - Puntaje MÃ¡ximo : "+ $F{puntaje_maximo}  + " - Puntaje Realizado : " +$F{puntaje_realizado}]]></textFieldExpression>
			</textField>
			<subreport>
