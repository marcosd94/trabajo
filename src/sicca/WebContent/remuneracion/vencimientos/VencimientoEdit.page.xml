<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
      no-conversation-view-id="/remuneracion/vencimientos/VencimientoList.xhtml"
      login-required="true">
      


   <begin-conversation flush-mode="MANUAL" join="true"/>
   
   <param name="editar" value="#{vencimientoFormController.editar}"/>
   <param name="vencimientoId" value="#{vencimientoFormController.vencimientoId}"/>
   
   <action execute="#{vencimientoFormController.init()}" on-postback="false"/>

	<navigation from-action="#{vencimientoFormController.save()}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/remuneracion/vencimientos/VencimientoList.xhtml"/>
      </rule>
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/remuneracion/vencimientos/VencimientoList.xhtml"/>
      </rule>
   </navigation>
   
   <restrict>#{identity.hasRole('ciudad_edit')}</restrict>

</page>